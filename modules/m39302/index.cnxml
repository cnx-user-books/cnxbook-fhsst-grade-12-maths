              </m:mrow>
            </m:math>
          </item>
          <item id="uid28">
            <m:math overflow="scroll">
              <m:mrow>
                <m:mo>-</m:mo>
                <m:mn>3</m:mn>
                <m:mo>,</m:mo>
                <m:mn>30</m:mn>
                <m:mo>,</m:mo>
                <m:mo>-</m:mo>
                <m:mn>300</m:mn>
                <m:mo>,</m:mo>
                <m:mn>3000</m:mn>
                <m:mo>,</m:mo>
                <m:mo>...</m:mo>
              </m:mrow>
            </m:math>
          </item>
        </list>
        
        
</section>
