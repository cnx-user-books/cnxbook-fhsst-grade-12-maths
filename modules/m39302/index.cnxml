          </m:math>
        </item>
        <item id="uid42">
          <m:math overflow="scroll">
            <m:mrow>
              <m:msub>
                <m:mi>a</m:mi>
                <m:mi>n</m:mi>
              </m:msub>
              <m:mo>=</m:mo>
