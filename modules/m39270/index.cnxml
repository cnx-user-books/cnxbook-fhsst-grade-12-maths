                    <m:msub>
                      <m:mi>v</m:mi>
                      <m:mi>A</m:mi>
                    </m:msub>
                    <m:mi>t</m:mi>
                  </m:mrow>
                </m:mtd>
              </m:mtr>
              <m:mtr>
