                    <m:mi>x</m:mi>
                    <m:mi>t</m:mi>
                  </m:msub>
                </m:mtd>
                <m:mtd>
                  <m:mo>=</m:mo>
                </m:mtd>
                <m:mtd columnalign="left">
                  <m:mrow>
                    <m:mn>1000</m:mn>
                    <m:mi mathvariant="normal">m</m:mi>
                    <m:mo>+</m:mo>
                    <m:msub>
                      <m:mi mathvariant="normal">v</m:mi>
                      <m:mi mathvariant="normal">t</m:mi>
                    </m:msub>
                    <m:mi mathvariant="normal">t</m:mi>
                  </m:mrow>
                </m:mtd>
              </m:mtr>
            </m:mtable>
          </m:math>
        </equation>
        <para id="id233785">where</para>
        <table id="id233790" summary="">
          <tgroup cols="2">
