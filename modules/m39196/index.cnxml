                <m:mrow>
                  <m:mo form="prefix">log</m:mo>
                  <m:mo>(</m:mo>
                  <m:mi>A</m:mi>
                  <m:mo>/</m:mo>
                  <m:mi>P</m:mi>
                  <m:mo>)</m:mo>
