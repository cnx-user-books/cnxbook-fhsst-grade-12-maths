                      <m:mn>1</m:mn>
                      <m:mo>+</m:mo>
                      <m:mn>0</m:mn>
                      <m:mo>.</m:mo>
                      <m:mn>075</m:mn>
                      <m:mo>)</m:mo>
                    </m:mrow>
                  </m:mfrac>
                  <m:mspace width="2.em"/>
                  <m:mi> Remember </m:mi>
                  <m:mi> that </m:mi>
                  <m:mo>:</m:mo>
                  <m:mn>7</m:mn>
                  <m:mo>.</m:mo>
                  <m:mn>5</m:mn>
                  <m:mo>%</m:mo>
                  <m:mo>=</m:mo>
                  <m:mfrac>
                    <m:mrow>
                      <m:mn>7</m:mn>
                      <m:mo>.</m:mo>
                      <m:mn>5</m:mn>
                    </m:mrow>
