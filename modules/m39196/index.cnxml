                  <m:mo>)</m:mo>
                </m:mrow>
              </m:mtd>
            </m:mtr>
            <m:mtr>
              <m:mtd/>
              <m:mtd>
                <m:mo>=</m:mo>
              </m:mtd>
              <m:mtd columnalign="left">
                <m:mrow>
                  <m:mfrac>
                    <m:mrow>
                      <m:mo form="prefix">log</m:mo>
                      <m:mo>(</m:mo>
                      <m:mfrac>
                        <m:mrow>
                          <m:mn>4</m:mn>
                          <m:mspace width="3.33333pt"/>
                          <m:mn>044</m:mn>
